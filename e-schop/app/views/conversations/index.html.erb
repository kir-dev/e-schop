<h1>Beszélgetések</h1>
<div>Olvasatlanok száma: <%= current_user.unread_inbox_count %></div>

<ol class = "inbox">
<% @conversations.each do |conversation| %>
    <li class = "inbox">
        <% if conversation.is_unread?(current_user) %><b><% end %>
        <%= link_to (conversation.participants - [current_user])[0].username + ": " + conversation.subject,
                    conversation_path(conversation) %>
        <% if conversation.is_unread?(current_user) %></b><% end %>
    </li>
<% end %>
</ol>

<div><%= link_to "Új beszélgetés", new_conversation_path %></div>
