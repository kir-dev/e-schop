<h1>Új beszélgetés</h1>

<%= form_tag conversations_path, method: :post do %>
    <div>
        <%= select_tag :user_id, options_from_collection_for_select(@recipients, :id, :name) %>
    </div>

    <div>
        <%= text_field_tag :subject, nil, placeholder: "Tárgy" %>
    </div>

    <div>
        <%= text_area_tag :body, nil, placeholder: "Hagyj üzenetet" %>
    </div>

    <%= submit_tag %>
<% end %>