<h3 align='center'> Termékeim </h3>
    <% has_goods = false %>
    <div class="uk-grid-small" uk-grid>
    <% @goods.each do |g| %>
      <% if g.seller_id == current_user.id%>
        <% has_goods = true %>
        <div class="uk-width-1-4@m">  
            <div class="uk-card-small uk-card-hover uk-card uk-card-default ">
                <div class="uk-card-header">
                    <div class="uk-grid-small uk-flex-middle" uk-grid>
                        <div class="uk-width-auto">
                              <%= link_to image_tag get_image(g), {action: 'good_show', id: g.id} %>
                        </div>
                        <div class="uk-width-expand">
                            <h3 class="uk-card-title uk-margin-remove-bottom">
                                <%= link_to g.name, {action: 'good_show', id: g.id}, class: "uk-link-reset" %>
                            </h3>
                            <p class="uk-text-meta uk-margin-remove-top"><time datetime="2016-04-01">
                                <%= g.updated_at.strftime("%Y-%m-%d, %H:%M") %>
                            </time></p>
                        </div>
                    </div>
                </div>
                <div class="uk-card-body uk-padding-remove-bottom">
                    <div> Ár: <%= g.price %> Ft/db &nbsp;&nbsp;  Mennyiség: <%= g.number %> db</div>
                </div>
                <div class="uk-card-footer">                    
                    <div align = 'center'>
                        <%= link_to action: 'edit', controller: 'goods', id: g.id do %> <span uk-icon="icon: file-edit" uk-tooltip="title: Szerkesztés; pos: bottom"></span><%end%>
                        <%= link_to action: 'delete_num', controller: 'goods', id: g.id do %> <span uk-icon="icon: trash" uk-tooltip="title: Összes törlése; pos: bottom"></span><%end%>
                    </div>
                </div>
            </div>
        </div>
      <% end %>  
    <% end %>
</div>
<% if has_goods == false %>
    <h2 align='center'> Jelenleg nem árulsz semmit </h2>
<% end %>