<h2> <%=@user.username%> profil adatok </h2>
<div> <%=link_to "Adatok módosítása", {:action => 'edit'} %> </div>

<% cart_num = 0 %>
<% @goods.each do |g| %>
    <% if g.buyer_id == session[:user_id] %>
       <% cart_num += 1 %>
    <% end %>
<%end%>
<% felirat = "Kosaram (" + cart_num.to_s + ")" %>
<div> <%=link_to felirat, {:action => 'my_cart', :controller => 'users'} %> </div>

<% good_num = 0 %>
<% @goods.each do |g| %>
    <% if g.seller_id == session[:user_id] %>
       <% good_num += 1 %>
    <% end %>
<%end%>
<% felirat = "Termékeim (" + good_num.to_s + ")" %>
<div> <%=link_to felirat, {:action => 'my_goods', :controller => 'users'} %> </div>

<div> <%=link_to "Vissza", {:action => 'landing', :controller => 'goods'} %> </div>

