<div>
    <div class="" uk-grid>
        <div class="uk-width-1-3@m">
            <%=image_tag get_image(modal,"list")%>

            </div>
            <div class="uk-width-2-3@m">
            
                    <p>
                    <strong>Név:</strong>
                    <%= modal.name %>                    
                    </p>

                    <p>
                    <strong>Ár/db:</strong>
                    <%= modal.price %>
                    Ft
                    </p>

                    <p>
                    <strong>Darabszám:</strong>
                    <%= modal.number %>
                    </p>

                    <p>
                    <!--@sellers.select{|seller| seller.id==modal.seller_id}.first
                    <% seller = find_seller(modal.seller_id)%>-->
                    <% seller = User.find_by_id(modal.seller_id)%>
                    <% if current_user.nil? %>
                        <strong>Eladó:</strong> <%= seller.username %>
                    <% elsif current_user != seller %>
                        <strong>Eladó:</strong> 
                        <span class = "uk-visible@l"> <%= link_to seller.username, conversations_path(sender_id: current_user.id, receiver_id: seller.id), method: :post  %></span>
                        <span class = "uk-hidden@l"> <%= link_to seller.username, conversations_path(sender_id: current_user.id, receiver_id: seller.id, mobile: "middle"), method: :post  %></span>
                    <% else %>
                        <strong>saját termék</strong>
                    <% end %>
                    </p>
                    <div>
                        <%=render partial:"goods/tags", object:modal.tags%>
                    </div>

                    <p>
                    <strong>Leírás:</strong>
                    <%= modal.description %>
                    </p>
                    <%@order = Good.new%>
                    <% if current_user != seller && !current_user.nil? %>
                    <%= form_for @order, :url => url_for(action: 'to_cart', controller: 'purchases',
                                                        id: modal.id) do |f| %>
                        <div>
                        <%= f.label :Mennyiség %>:
                        <%= f.text_field :number,class:"uk-input uk-form-width-medium" %>
                        <%=f.submit "Kosárba" ,class:"uk-button uk-button-default " %>
                        </div>
                    <% end %>
                    <% end %>
            </div>
    </div>    
</div>
