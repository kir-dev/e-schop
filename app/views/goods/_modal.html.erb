       <div class="uk-child-width-1-2  uk-flex-center" uk-grid>
            <div>
                <div class="" uk-grid>
                    <div class="uk-width-1-3@m">
                        <%=image_tag get_image(modal,"list")%>

                        </div>
                        <div class="uk-width-2-3@m">
                        
                                                    <p>
                                <strong>Név:</strong>
                                <%= modal.name %>
                                </p>

                                <p>
                                <strong>Ár/db:</strong>
                                <%= modal.price %>
                                Ft
                                </p>

                                <p>
                                <strong>Darabszám:</strong>
                                <%= modal.number %>
                                </p>

                                <p>
                               
                                <% seller=@sellers.select{|seller| seller.id==modal.seller_id}.first%>
                                <% if current_user != seller || current_user.nil? %>
                                    <strong>Eladó:</strong> 
                                    <%= link_to seller.username, { action: 'show_other_user', controller: 'users',
                                                                id: seller.id, good_id: modal.id }  %>
                                <% else %>
                                    <strong>saját termék</strong>
                                <% end %>
                                </p>

                                <p>
                                <strong>Leírás:</strong>
                                <%= modal.description %>
                                </p>
                                <%@order = Good.new%>
                                <% if current_user != seller && !current_user.nil? %>
                                <%= form_for @order, :url => url_for(action: 'to_cart', controller: 'purchases',
                                                                    id: modal.id) do |f| %>
                                    <div>
                                    <%= f.label :Mennyiség %>:
                                    <%= f.text_field :number,class:"uk-input uk-form-width-medium" %>
                                    <%=f.submit "Kosárba" ,class:"uk-button uk-button-default " %>
                                    </div>
                                <% end %>
                                <% end %>
                        </div>
                </div>    
            </div>
        </div>