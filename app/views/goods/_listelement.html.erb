
<div class="uk-text-center">
        <div class="uk-inline-clip uk-transition-toggle" tabindex="0">
                      <% if listelement.photo.attached? %>
                <%= image_tag listelement.thumb_list%>
              <% else %>
                <% product = Product.find_by_id(listelement.product_id) %>
                <% if product.photo.attached? %>
                  <%= image_tag product.thumb_list%>
                <% end %> 
            <% end %>
            <div class="uk-transition-fade uk-position-cover  uk-overlay uk-overlay-default uk-flex uk-flex-center uk-flex-middle">
                <p class="uk-h1 uk-margin-remove"><%=listelement.name%></p>
            </div>
        </div>
</div>